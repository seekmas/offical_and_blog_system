{% extends "GembaAdminBundle::layout.html.twig" %}

{% block title %}GembaAdminBundle:Block:index{% endblock %}

{% block body %}
<div class="row">


<div class="col-md-6">
<div class="panel panel-default">
    <div class="panel-heading">添加新模块</div>

    <div class="panel-body">
        {{form(form)}}
    </div>
</div>
</div>


<div class="col-md-6">
<div class="panel panel-default">
    <div class="panel-heading">管理模块</div>

    <div class="panel-body">

        {% for key , block in blocks %}
            <p>
                <a href="{{ path('sub_block_home' , {'id': block.id}) }}">
                        {{ block }}
                        <span class="label label-success">{{ block.sort }}</span>
                </a>
            </p>
            {% for sub in block.children %}
            <p>
                <a href="{{ path('add_sub_block_home' , {'id': block.id , 'sub_id': sub.id}) }}">
                   ---
                    {{ sub.subject }}
                    <span class="label label-success">{{ sub.sort }}</span>
                </a>
            </p>
            {% endfor %}

        {% endfor %}

    </div>
</div>
</div>


</div>
{% endblock %}
