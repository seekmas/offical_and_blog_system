    <link rel="stylesheet" href="{{ asset('redactor/redactor/redactor.css') }}" />
    <script src="{{ asset('redactor/redactor/redactor.min.js') }}"></script>

    <script type="text/javascript">
    $(document).ready(
        function()
    {
        $('textarea').redactor({
            fixed: true ,
            minHeight: 200 ,
            imageUpload: '{{ path('upload') }}'
        });
    });
    </script>
